{
  "name": "isomorphic-worker",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "description": "simplified cross worker API for web workers and worker threads",
  "scripts": {
    "build": "tsc --build",
    "watch": "tsc --build -w",
    "pretest": "npm run clean && npm run lint && npm run build",
    "test:browser": "npm run test:browser --workspaces --if-present",
    "test:node": "npm run test:node --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint",
    "clean": "rimraf -g \"packages/*/dist\""
  },
  "author": "Dazl",
  "license": "MIT",
  "devDependencies": {
    "@dazl/create-disposables": "^18.5.1",
    "@file-services/path": "^11.0.1",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22",
    "chai": "^6.0.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "mocha": "^11.7.2",
    "mocha-play": "^8.2.0",
    "playwright-chromium": "^1.55.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "source-map-loader": "^5.0.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.44.1",
    "webpack": "^5.101.3"
  }
}
