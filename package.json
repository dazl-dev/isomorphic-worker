{
  "name": "@wixc3/isomorphic-worker",
  "version": "1.0.0",
  "description": "simplified cross worker API for web workers and worker threads",
  "homepage": "https://github.com/wixplosives/isomorphic-worker",
  "main": "./dist/node.js",
  "types": "./dist/types.d.ts",
  "type": "module",
  "browser": {
    "./dist/node-worker-scope.js": "./dist/browser-worker-scope.js",
    "./dist/node-worker.js": "./dist/browser-worker.js"
  },
  "exports": {
    "worker-scope": "./dist/node-worker-scope.js",
    "worker": "./dist/node-worker.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "pretest": "npm run clean && npm run build",
    "test:browser": "mocha-play \"dist/test/browser-*.test.js\" -c ./webpack.config.js",
    "test:node": "mocha \"dist/test/node-*.test.js\"",
    "test": "npm run test:node && npm run test:browser",
    "clean": "rimraf dist"
  },
  "keywords": [
    "worker threads",
    "worker_threads",
    "webworker",
    "web worker",
    "web-worker",
    "worker",
    "threads"
  ],
  "author": "Wix.com",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/wixplosives/isomorphic-worker/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wixplosives/isomorphic-worker.git"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "18",
    "@wixc3/create-disposables": "^2.2.0",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "mocha-play": "^4.1.0",
    "playwright": "^1.29.1",
    "rimraf": "^3.0.2",
    "source-map-loader": "^4.0.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0"
  }
}
