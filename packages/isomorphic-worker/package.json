{
  "name": "@wixc3/isomorphic-worker",
  "version": "1.0.6",
  "description": "simplified cross worker API for web workers and worker threads",
  "homepage": "https://github.com/wixplosives/isomorphic-worker",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w"
  },
  "exports": {
    "./worker-scope": {
      "browser": "./dist/browser-worker-scope.js",
      "require": "./dist/node-worker-scope.js",
      "types": "./dist/node-worker-scope.d.ts",
      "default": "./dist/browser-worker-scope.js"
    },
    "./worker": {
      "browser": "./dist/browser-worker.js",
      "require": "./dist/node-worker.js",
      "types": "./dist/node-worker.d.ts",
      "default": "./dist/browser-worker.js"
    },
    "./package": "./package.json",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "!dist/tsconfig.tsbuildinfo"
  ],
  "keywords": [
    "worker threads",
    "worker_threads",
    "webworker",
    "web worker",
    "web-worker",
    "worker",
    "threads"
  ],
  "author": "Wix.com",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/wixplosives/isomorphic-worker/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wixplosives/isomorphic-worker.git"
  }
}
